{
  "compilerOptions": {
    //"moduleResolution": "node12",
    "module": "CommonJS",
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "outDir": "dist",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "declaration": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"]
}
